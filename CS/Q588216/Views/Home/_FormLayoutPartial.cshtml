@model MVCxGridViewDataBinding.Models.MyModel

@Html.DevExpress().FormLayout(settings => {
    settings.Name = "FormLayout";

    var groupItem = settings.Items.AddGroupItem(groupSettings => {
        groupSettings.Caption = "ModelGroup";
        groupSettings.ShowCaption = DefaultBoolean.True;
        groupSettings.GroupBoxDecoration = GroupBoxDecoration.Default;
    });

    groupItem.Items.Add(m => m.ModelName, s => { 
        ((TextBoxSettings)s.NestedExtensionSettings).ShowModelErrors = true;
    });
    
    groupItem.Items.Add(m => m.ModelState, s => {
        ((CheckBoxSettings)s.NestedExtensionSettings).ShowModelErrors = true;
    });
    groupItem.Items.Add(m => m.ModelDate, s => {
        ((DateEditSettings)s.NestedExtensionSettings).ShowModelErrors = true;
    });
}).GetHtml()
